<!DOCTYPE html>
<html lang="en" style="overflow: auto;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <title>老师介绍</title>
    <link rel="stylesheet" href="/Content/amazeui.min.css" />
    <link rel="stylesheet" href="/Content/admin.css">
    <link rel="stylesheet" href="/Content/CoachIndex.css">
    <link rel="stylesheet" href="/Content/iconfont.css">
    <link rel="stylesheet" href="/font/iconfont.woff">
    <link rel="stylesheet" href="/font/iconfont.eot">
    <link rel="stylesheet" href="/font/iconfont.svg">
    <link rel="stylesheet" href="/font/iconfont.ttf">
</head>
<body>
    @Html.Action("Default", "Base")
    <div class="_person">
        <!-- 头部导航 -->
        <header data-am-widget="header" class="am-header am-header-default">
            <div class="am-header-left am-header-nav">
                <a href="javascript:history.back()" class="">
                    <i class="am-header-icon am-icon-arrow-left"></i>
                </a>
            </div>
            <h1 class="am-header-title">
                <a href="#title-link" class="">老师介绍</a>
            </h1>
            <div class="am-header-right am-header-nav">
                <a href='@Url.Action("Index","Student")' class=""><i class="icon am-icon-home iconfont textAlign"></i></a>                
            </div>
        </header>
        <!-- 内容部分 -->
        <div class="_personCon">
          
            <div class="person_base">
                <img src="http://s.amazeui.org/media/i/demos/bing-1.jpg" style="width:100px;height:65px" id="himg" alt="" class="am-u-sm-5 am-u-md-5 am-u-lg-5">               
                <p>姓名：<span id="xm"></span></p>               
                <p>特长：<span id="tc"></span></p>
                <p>教龄：<span id="jl"></span></p>         
            </div>
            <div class="person_js">
                <p>简介：</p>
                <p id="info"></p>
            </div>           
            <div class="person_pho">
                <p>个人相册：</p>
                <ul class="am-avg-sm-3 am-avg-md-3 am-avg-lg-3 am-thumbnails" id="fc"></ul>
               
            </div>
            <div class="person_pho">
                <p>个人视频：</p>             
                <ul id="sp" class="am-avg-sm-3 am-avg-md-3 am-avg-lg-3 am-thumbnails"></ul>
            </div>
           
        </div>
    </div>
    <input type="hidden" id="hdID" value="@ViewBag.CoachID" />

    <input type="hidden" id="hdVenveID" value="@ViewBag.VenueID" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="/Scripts/Student/CoachInfo.js"></script>
    <script type="text/javascript">
        LoadInfo();      
        LoadPresenceInfo();
        GetSP();
       </script>
</body>
</html>