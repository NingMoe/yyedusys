@{
    ViewBag.Title = "场馆系统";
    ViewBag.SubTitle = "编辑学生";
    Layout = "~/Views/Shared/_HeaderPartial.cshtml";
}


@Html.Action("Default", "Base")
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">编辑学生</h3>
            </div>
            <form id="studentfrom" class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <input type="hidden" id="StudentID" name="StudentID" value="@ViewBag.StudentID" />
                        <input type="hidden" id="UserName" name="UserName" value="" />
                        <label for="UserName" class="col-sm-2 control-label">手机号</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="UserNameShow" placeholder="手机号" disabled>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="FullName" class="col-sm-2 control-label">姓名</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="FullName" name="FullName" placeholder="姓名">
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="ParentFullName" class="col-sm-2 control-label">家长姓名</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="ParentFullName" name="ParentFullName" placeholder="家长姓名">
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="ParentMobile" class="col-sm-2 control-label">家长手机</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="ParentMobile" name="ParentMobile" placeholder="家长手机">
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="BirthDate" class="col-sm-2 control-label">出生日期</label>
                        <div class="col-sm-2">
                            <input type="date" class="form-control" id="BirthDate" name="BirthDate" placeholder="出生日期">
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="Address" class="col-sm-2 control-label">住址</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="Address" name="Address" placeholder="住址">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="@Url.Action("Index", "Student")" class="btn btn-default">返回</a>&nbsp;&nbsp;
                    <button type="button" class="btn btn-info pull-right" onclick="return edit();">编辑</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/SysManage/Student.js"></script>
<script>
    $(function () {
        show();
    })
</script>