    <script>

        $(function () {

            var ddd = new Date();
            var day = ddd.getDate();

            var month = ddd.getMonth() + 1;
            if (month < 10) {
                var month = "0" + (ddd.getMonth()+1);
            }
            if (ddd.getDate() < 10) {
                day = "0" + ddd.getDate();
            }

            var datew = ddd.getFullYear() + "-" + month + "-" + day;
            var datew = datew.toString();

            $("#StartDate").val(datew);
            $("#EndDate").val(datew);

            var venueId = $("#VenueID").val();
            showCoach(venueId);

            bind_data();
        })

    </script>
