@{
    ViewBag.Title = "场馆系统";
    ViewBag.SubTitle = "待发工资课程";
    Layout = "~/Views/Shared/_HeaderPartial.cshtml";
}

@*@section Menu {

}*@
    @*<script src="~/Scripts/Tables/Data-menu.js"></script>*@
    @*@Scripts.Render("~/Scripts/Tables/Data/menu")*@

@Html.Action("Default", "Base")

<div class="row">

    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">查询条件</h3>
            </div>
            <form id="teachingschedulefrom" class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <input type="hidden" id="VenueID" name="VenueID" value="@ViewBag.venueId" />
                        <input type="hidden" id="WorkDate" name="WorkDate" value="" />
                        <label for="CoachID" class="col-sm-1 control-label">老师</label>
                        <div class="col-sm-3">
                            <select id="CoachID" name="CoachID" class="form-control"></select>
                        </div>
                        <label for="CurriculumEndTime" class="col-sm-1 control-label">日期</label>
                        <div class="col-sm-1">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="month" class="form-control" id="CurriculumBeginTime" name="CurriculumBeginTime">
                                @*<span class="input-group-addon">到</span>
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="month" class="form-control" id="CurriculumEndTime" name="CurriculumEndTime">*@
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <button type="button" class="btn btn-info pull-right" onclick="return bindData();">查询</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">课程列表</h3>
            </div>
            <div class="box-body" id="demo">
                <table id="teachingscheduletable" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>选择</th>
                            <th>编号</th>
                            @*<th>场馆</th>
                            <th>校区</th>*@
                            <th>老师</th>
                            <th>课时标题</th>
                            <th>上课日期</th>
                            <th>上课时间</th>
                            <th>下课时间</th>
                            <th>课时费用</th>
                            <th>课时工资</th>
                            <th>课程类型</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            @*<th colspan="8" style="text-align:right">当页合计:</th>*@
                            <th style="text-align:right">总计:<span id="summoney"></span></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-xs-12">
        <button type="button" class="btn btn-primary pull-left" style="margin-left:10px;" id="selectAll">全选</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-primary pull-left" style="margin-left:10px;" id="unSelect">全不选</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-primary pull-left" style="margin-left:20px;" id="save">录入工资</button>
    </div>
</div>

@*@section Scripts {

