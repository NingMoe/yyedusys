@{
    ViewBag.Title = "修改密码成功";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
    <p>
        @*密码已更改. 请 @Html.ActionLink("点击重新登录", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@

        
        密码已更改. 请 <a href="javascript:void(0)" onclick="login()">点击重新登录</a>
        <script>
            function login() {
                window.top.location.href = '/Account/Login'
            }
        </script>
    </p>
</div>
